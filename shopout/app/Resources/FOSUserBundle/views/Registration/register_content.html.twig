{% trans_default_domain 'FOSUserBundle' %}






<div class="container" id="login">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h2 class="card-title text-center">Inscription</h2>
                    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                        <div class="form-label-group">
                            {{ 'security.register.name'|trans }}
                            {{ form_widget(form.name) }}
                        </div>
                        <div class="form-label-group">
                            {{ 'security.login.username'|trans }}
                            {{ form_widget(form.username) }}
                        </div>
                        <div class="form-label-group">
                            {{ 'security.register.email'|trans }}
                            {{ form_widget(form.email) }}
                        </div>
                        <div class="form-label-group">
                            {{ 'security.register.adresse'|trans }}
                            {{ form_widget(form.adresse) }}
                        </div>
                        <div class="form-label-group">
                            {{ 'security.register.postal'|trans }}
                            {{ form_widget(form.postal) }}
                        </div>
                        <div class="form-label-group">
                                {{ form_widget(form.plainPassword) }}
                        </div>
                        <div class="form-label-group mt-5">
                            <div>
                                <input type="submit" value="{{ 'registration.submit'|trans }}" />
                            </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>