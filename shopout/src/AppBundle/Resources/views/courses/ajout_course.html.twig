{% extends '@App/base.html.twig' %}

{% block block1 %}


    {#  Message flash pour l'ajout d'une course#}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-danger" role="alert">
            <div class="flash-notice">
               <div class="col-12 text-center"> {{ message }}</div>
            </div>
        </div>

    {% endfor %}


    <div class="container-fluid" id="block-courses">
        <div class="row courses-ajout d-flex align-items-center">
            <div class="col-12">
                <h1 class="text-center">Ajouter une course</h1>
            </div>
        </div>
    </div>
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="offset-2 col-8 offset-2">
                {{ form_start(formCourses) }}
                <div class="form-group">
                    {{ form_label(formCourses.nom, 'Titre', {'label_attr': {'class': 'labelClass'}}) }}
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        {{ form_widget(formCourses.nom, {"attr" : {"class": "form-control"}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(formCourses.ville) }}
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-map-marked-alt"></i></span>
                        </div>
                        {{ form_widget(formCourses.ville, {"attr" : {"class": "form-control"}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(formCourses.prix) }}
                    <div class="input-group mb-3">
                        {{ form_widget(formCourses.prix, {"attr" : {"class": "form-control"}}) }}
                        <div class="input-group-append">
                            <span class="input-group-text">â‚¬</span>
                        </div>
                    </div>

                    {{ form_widget(formCourses.prix, {"attr" : {"class": "form-control"}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formCourses.description) }}
                    {{ form_widget(formCourses.description, {"attr" : {"class": "form-control"}}) }}
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-6">
                            {{ form_label(formCourses.adresseDepart) }}
                            {{ form_widget(formCourses.adresseDepart, {"attr" : {"class": "form-control"}}) }}
                        </div>
                        <div class="col-6">
                            {{ form_label(formCourses.adresseArrivee) }}
                            {{ form_widget(formCourses.adresseArrivee, {"attr" : {"class": "form-control"}}) }}


                        </div>
                    </div>
                </div>



                <div class="form-group">
                    {{ form_label(formCourses.dateLivraison) }}
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                        </div>
                        {{ form_widget(formCourses.dateLivraison, {"attr" : {"class": "form-control"}}) }}
                    </div>

                </div>


                <div class="form-group">
                    {{ form_label(formCourses.save) }}
                    {{ form_widget(formCourses.save, {"attr" : {"class": "btn btn-outline-success float-right"}}) }}
                </div>
            {{ form_end(formCourses) }}

        </div>
    </div>
</div>


{% endblock %}